<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="text.title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/titleTextMStart</item>
        <item name="android:layout_marginEnd">@dimen/titleTextMEnd</item>
        <item name="android:layout_marginTop">@dimen/titleTextMTop</item>
        <item name="android:layout_marginBottom">@dimen/titleTextMBottom</item>
        <item name="android:shadowColor">@color/textShadowColor</item>
        <item name="android:shadowDx">@dimen/titleTextShadowDx</item>
        <item name="android:shadowDy">@dimen/titleTextShadowDy</item>
        <item name="android:shadowRadius">@dimen/titleTextShadowRadius</item>
    </style>

    <style name="text.title.large">
        <item name="android:textSize">@dimen/titleTextSizeBig</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.title.medium">
        <item name="android:textSize">@dimen/titleTextSizeMedium</item>
        <item name="android:layout_marginBottom">@dimen/titleTextMediumMBottom</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="text.title.medium.horizontal">
        <item name="android:layout_marginTop">@dimen/regularTextMTopHorizontal</item>
    </style>

    <style name="text.title.medium.right">
        <item name="android:layout_alignParentEnd">true</item>


    </style>

    <style name="text.title.medium.right.vertical">
        <item name="android:layout_marginTop">@dimen/titleTextDirectionVerticalMTop</item>
        <item name="android:drawablePadding">@dimen/titleTextDirectionImagePaddingVertical</item>
    </style>

    <style name="text.title.medium.right.horizontal">
        <item name="android:layout_marginTop">@dimen/titleTextDirectionHorizontalMTop</item>
        <item name="android:drawablePadding">@dimen/titleTextDirectionImagePaddingHorizontal</item>
    </style>

    <style name="text.regular">
        <item name="android:layout_height">@dimen/noHeight</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/regularTextMStart</item>
        <item name="android:layout_marginEnd">@dimen/regularTextMEnd</item>
        <item name="android:layout_marginTop">@dimen/regularTextMTop</item>
        <item name="android:layout_marginBottom">@dimen/regularTextMBottom</item>
        <item name="android:textSize">@dimen/regularTextSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/regularTextImagePadding</item>
    </style>

    <style name="text.regular.bottom">
        <item name="android:layout_marginBottom">@dimen/regularTextBottomMBottom</item>
    </style>



</resources>
